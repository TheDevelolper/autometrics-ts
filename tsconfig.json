{
  "compilerOptions": {
    "jsx": "preserve",
    "target": "esnext",
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true
  },
  "exclude": [
    "node_modules/**",
    "packages/*/dist/**",
    "packages/*/node_modules/**",
    "packages/*/playground/*/dist/**",
    "packages/*/playground/*/node_modules/**"
  ]
}
